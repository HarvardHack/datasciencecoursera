# Asignar valores de la funci√≥n

directory<-"specdata"
pollutant<-"sulfate"
Id<-1:332

#Inicia la funcion pollutantmean
pollutantmean <- function (directory,  pollutant,id=1:332) {
  
  #Inicializar la variable to que contiene las columnas de datos
  Fmedias <- c()
  
  #Inicializa el directorio de lectura de archivos
  directory1<-"F:/Coursera/RProgramming/"
  directory2<- paste( directory1, directory, sep="/" )
  setwd(directory2)
  
  #Inicializa la lectura de archivos
  Fnombres <- as.character( list.files() )
  Fdirectory <- paste( directory2, Fnombres, sep="/" )
  Flist <- Fdirectory[ id ]

  
  #Lee los archivos y eleimina los valores NA
  for( i in id ) {
    loadfile <- read.csv( Fdirectory[i] )
    resultados <- loadfile[,pollutant]
    Valid <- resultados[ !is.na( resultados) ]
    Fmedias <- c(Fmedias, Valid )
  }
  return( mean( Fmedias ) )
}

pollutantmean("specdata", "sulfate", 1:10)
pollutantmean("specdata", "nitrate", 70:72)
pollutantmean("specdata", "nitrate", 23)
